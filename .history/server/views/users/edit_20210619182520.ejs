<!-- Header block -->
<%- include ("../partials/header.ejs") %>

<!-- Main navigation bar -->
<%- include ("../partials/main_nav.ejs") %>

<!-- Main Content to Add User -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="userTextFied">Username</label         
                    ><input type="text" class="form-control"
                    id="userTextFied"
                    placeholder="Edit User Contact Name"
                    name="contactName" 
                    value="<%= contactToEdit.contactName %>"
                    required>
                </div>
                <div class="form-group">
                    <label for="phoneTextFied">Phone number</label         
                    ><input type="phone" class="form-control"
                    id="phoneTextFied"
                    placeholder="Edir User Contact Number"
                    name="contactNumber"
                    value="<%= contactToEdit.contactNumber %>">
                </div>
                <div class="form-group">
                    <label for="emailTextFied">Email</label         
                    ><input type="email" class="form-control"
                    id="emailTextFied"
                    placeholder="Edit User Contact  Email"
                    name="contactEmail" 
                    value="<%= contactToEdit.contactEmail %>">
                </div>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>

                    <a href="/users/list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>
            </form>
        </div>    
    </div>
</div>

<!-- Bottom stick navigator bar -->
<%- include ("../partials/bottom_nav.ejs") %>

<!-- Footer block -->
<%- include ("../partials/footer.ejs") %>
